<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

  <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
  <constant name="struts.devMode" value="true"/>


  <package name="default" namespace="/" extends="struts-default">
    <action name="">
      <result>/WEB-INF/jsp/index.jsp</result>
    </action>

    <action name="home" class="org.cip4.bambi.actions.HomeAction2">
      <result name="success">/WEB-INF/jsp/home.jsp</result>
      <result name="error">/WEB-INF/jsp/error.jsp</result>
    </action>

    <action name="queueChangeStatus" class="org.cip4.bambi.actions.QueueStatusAction">
      <result>/WEB-INF/jsp/empty.jsp</result>
    </action>
    
    <!--action name="showDevice" class="org.cip4.bambi.actions.ShowDeviceAction">
      <result>/WEB-INF/jsp/showDevice.jsp</result>
    </action>
    
    <action name="showQueue" class="org.cip4.bambi.actions.ShowQueueAction">
      <result>/WEB-INF/jsp/showQueue.jsp</result>
    </action-->
  </package>

  <package name="jmf" namespace="/jmf" extends="struts-default">
    <action name="*" class="org.cip4.bambi.actions.JmfAction">
      <result name="success">/WEB-INF/jsp/jmf.jsp</result>
    </action>
  </package>

  <package name="settings" namespace="/settings" extends="struts-default">
    <action name="*" class="org.cip4.bambi.actions.SettingsAction">
      <result>/WEB-INF/jsp/settings.jsp</result>
    </action>
  </package>
  <package name="save_settings" namespace="/save_settings" extends="struts-default">
    <action name="*" class="org.cip4.bambi.actions.SaveSettingsAction">
      <result name="success">/WEB-INF/jsp/settings/settings_saved_success.jsp</result>
      <result name="error">/WEB-INF/jsp/settings/settings_saved_error.jsp</result>
    </action>
  </package>

  <package name="show_device" namespace="/showDevice" extends="struts-default">
    <action name="*" class="org.cip4.bambi.actions.ShowDeviceAction">
      <result>/WEB-INF/jsp/showDevice.jsp</result>
    </action>
  </package>

  <package name="show_Queue" namespace="/showQueue" extends="struts-default">
    <action name="*" class="org.cip4.bambi.actions.ShowQueueAction">
      <result>/WEB-INF/jsp/showQueue.jsp</result>
    </action>
  </package>

</struts>
