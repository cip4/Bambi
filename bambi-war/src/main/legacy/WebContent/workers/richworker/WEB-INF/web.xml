<?xml version="1.0" encoding="UTF-8"?>
<web-app id="SimWorker" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<description>A Bambi worker with fixed job phases</description>
	<display-name>SimWorker</display-name>
	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
		<param-value>.xhtml</param-value>
	</context-param>
	<context-param>
   		<param-name>facelets.LIBRARIES</param-name>
  		<param-value>/WEB-INF/tags/cip4.taglib.xml</param-value>
  	</context-param> 
	<!-- enable debugging -->
	<context-param>
		<param-name>debug</param-name>
		<param-value>2</param-value>
	</context-param>
	<servlet>
		<servlet-name>SimWorkerServlet</servlet-name>
		<servlet-class>org.cip4.bambi.core.BambiServlet</servlet-class>
	<init-param>
			<param-name>bambiDump</param-name>
			<param-value>/var/tmp/bambi/dump/sim</param-value>
		</init-param>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimWorkerServlet</servlet-name>
		<url-pattern>/overview/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimWorkerServlet</servlet-name>
		<url-pattern>/jmf/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimWorkerServlet</servlet-name>
		<url-pattern>/showDevice/*</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>SimWorkerServlet</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimWorkerServlet</servlet-name>
		<url-pattern>/showQueue/*</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
			<servlet-name>SimWorkerServlet</servlet-name>
			<url-pattern>/showSubscriptions/*</url-pattern>
		</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimWorkerServlet</servlet-name>
		<url-pattern>/processNextPhase/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimWorkerServlet</servlet-name>
		<url-pattern>/devices/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<!-- entrance point for manipulating QueueEntries -->
		<servlet-name>SimWorkerServlet</servlet-name>
		<url-pattern>/modifyQE/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<!-- entrance point for showing JDF File info -->
		<servlet-name>SimWorkerServlet</servlet-name>
		<url-pattern>/showJDF/*</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>
	<filter>
		<display-name>RichFaces Filter</display-name>
		<filter-name>richfaces</filter-name>
		<filter-class>org.ajax4jsf.Filter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>richfaces</filter-name>
		<servlet-name>Faces Servlet</servlet-name>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
    	<exception-type>java.lang.Throwable</exception-type>
    	<location>/exception.jsp</location>
  	</error-page>
  	<error-page>
    	<error-code>500</error-code>
    	<location>/exception.jsp</location>
  	</error-page>
</web-app>
